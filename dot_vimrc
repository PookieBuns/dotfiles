lua << EOF
require('nvim-tree').setup {
    sync_root_with_cwd = true,
    actions = {
        open_file = {
            quit_on_open = true
        }
    },
    diagnostics = {
        enable = true,
    },
}
EOF
        endif
        NvimTreeToggle
    endfunction
    nnoremap <F3> :call ToggleTree()<cr>
